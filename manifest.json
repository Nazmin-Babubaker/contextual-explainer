{
    
  "manifest_version": 3,
  "name": "Contextual Explainer",
  "version": "1.0",
  "description": "Select text and get a simplified explanation in the side panel.",
  

  "icons": {
    "16": "pen-tablet.png",
    "48": "pen-tablet.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
 
  "permissions": [
    "contextMenus", 
    "sidePanel",
    "activeTab"     
  ],

  
  "side_panel": {
    "default_path": "panel.html"
  },

  "host_permissions": [
   "https://generativelanguage.googleapis.com/"
  ]
}
