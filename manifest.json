{
    
  "manifest_version": 3,
  "name": "Contextual Explainer",
  "version": "1.0",
  "description": "Select text and get a simplified explanation in the side panel.",
  
  
  "icons": {
    "16": "images/icon-16.png" 
  },
  
  
  "background": {
    "service_worker": "background.js"
  },
  
 
  "permissions": [
    "contextMenus", 
    "sidePanel"     
  ],

  
  "side_panel": {
    "default_path": "panel.html"
  }
}
